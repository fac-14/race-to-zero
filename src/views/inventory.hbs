<section class="items-container">
    <header class="items-header">
        <h2 class="main-title">Bought Items</h2>
    </header>
    <div class="items-container">
        {{#each boughtItems}}
        <div class="items-overview">
            {{!-- <img src='{{this.img_link}}'> --}}
            <h3 class="newItemH3">{{this.title}} : {{this.id}}</h3>
            <button class="new-item-button" id="{{this.id}}" onclick="window.location.href='/inventory/bought-item/{{this.id}}'">
                Find out more
            </button>
            {{/each}}
        </div>
</section>


